---
// @ts-ignore
import { Icon } from "astro-icon";

const features = [
  {
    title: "Crystal Bowls",
    description:
      "Extended sessions of Crystal Bowls for over 2 hours.",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Energy",
    description:
      "Get good energies from our latest tech.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "Line group",
    description:
      "Join our community and share your opinion and suggestions.",
    icon: "bx:bxs-data",
  },
  {
    title: "Other stuff",
    description:
      "Here we will put other stuff.",
    icon: "bx:bxs-bot",
  },
  {
    title: "Other stuff 2",
    description:
      "More stuff here.",
    icon: "bx:bxs-file-find",
  },
  {
    title: "Other stuff 3",
    description:
      "Here we will put more stuff.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Everything you need to start a healthy life.
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Did you know that crystals can help you to improve your life ?
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
